@{
    Layout = "_LayoutForEditor";
}

<div id="gjs" style="margin-top: -16px;"></div>

@section Scripts {
<script type="text/javascript">
    "use strict";

    (function ($) {
        $(document).ready(function () {
            var editor = grapesjs.init({
                @* height: '80vh', *@
                showOffsets: 1,
                noticeOnUnload: 0,
                storageManager: { autoload: 0 },
                container: '#gjs',
                fromElement: true,
                plugins: ['gjs-preset-webpage'],
                pluginsOpts: {
                    'gjs-preset-webpage': {}
                }
            });
        }); // end-document-ready
    }(jQuery));

</script>
}